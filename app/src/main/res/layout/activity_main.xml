<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <TextView android:id="@+id/txv_first"
            style="@style/CardStyle"
            android:layout_weight="1"
            android:text="@string/mengk_txv_first"/>

        <TextView android:id="@+id/txv_second"
            style="@style/CardStyle"
            android:layout_weight="1"
            android:text="@string/mengk_txv_second"/>

        <TextView android:id="@+id/txv_third"
            style="@style/CardStyle"
            android:layout_weight="1"
            android:text="@string/mengk_txv_third"/>

        <TextView android:id="@+id/txv_fourth"
            style="@style/CardStyle"
            android:layout_weight="1"
            android:text="@string/mengk_txv_fourth"/>

    </LinearLayout>

</RelativeLayout>
